from typing import IO

from apimatic_core.utilities.file_helper import FileHelper


class TestFileHelper:

    def test_get_file(self):
        file_url: str = 'https://gist.githubusercontent.com/asadali214/' \
                   '0a64efec5353d351818475f928c50767/raw/8ad3533799ecb4e01a753aaf04d248e6702d4947/testFile.txt'
        actual_file: IO[bytes] = FileHelper.get_file(file_url)
        assert actual_file is not None \
               and actual_file.read() == 'This test file is created to test CoreFileWrapper ' \
                                        'functionality'.encode('ascii')
